{
    "name": "qumail",
    "version": "1.0.0",
    "description": "QuMail - Quantum Secure Email Client",
    "main": "dist/main.js",
    "author": "QuMail Team",
    "license": "MIT",
    "scripts": {
        "build": "tsc",
        "dev": "tsc && electron .",
        "start": "electron .",
        "package": "electron-builder"
    },
    "devDependencies": {
        "@types/node": "^20.10.0",
        "electron": "^28.1.0",
        "electron-builder": "^24.9.0",
        "typescript": "^5.3.0"
    },
    "build": {
        "appId": "com.qumail.desktop",
        "productName": "QuMail",
        "directories": {
            "output": "release"
        },
        "win": {
            "target": [
                "nsis"
            ],
            "icon": "resources/icon.ico"
        },
        "nsis": {
            "oneClick": false,
            "allowToChangeInstallationDirectory": true
        }
    }
}