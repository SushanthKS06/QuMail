# QuMail Backend Environment Configuration
# Copy this file to .env and fill in your values

# ============================================
# GMAIL OAUTH2 CREDENTIALS
# ============================================
# Get these from: https://console.cloud.google.com/apis/credentials
# 1. Create a project
# 2. Enable Gmail API
# 3. Create OAuth 2.0 Client ID (Web application type)
# 4. Set Authorized redirect URI to: http://127.0.0.1:8000/api/v1/auth/oauth/gmail/callback

GMAIL_CLIENT_ID=your_client_id_here
GMAIL_CLIENT_SECRET=your_client_secret_here
GMAIL_REDIRECT_URI=http://127.0.0.1:8000/api/v1/auth/oauth/gmail/callback

# ============================================
# SECURITY (Auto-generated, change in production)
# ============================================
SECRET_KEY=
API_TOKEN=

# ============================================
# KEY MANAGER
# ============================================
KM_URL=http://127.0.0.1:8100

# ============================================
# APPLICATION SETTINGS
# ============================================
DEBUG=true
LOG_LEVEL=INFO
